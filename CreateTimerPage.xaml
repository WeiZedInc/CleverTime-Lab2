<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CleverTime.CreateTimerPage"
             Title="Add new timer">


    <StackLayout Orientation="Vertical" x:Name="RootLayout">

        <Entry
             x:Name="NameInput"
             Placeholder="Input incredible name"
             Completed="NameInput_Completed" />
        
        <HorizontalStackLayout>
        <Label VerticalOptions="Center"
            Text="Start from current time:"/>

        <CheckBox 
            x:Name="isFromNowCheckBox"
            IsChecked="true" 
            CheckedChanged="isFromNowCheckBox_CheckedChanged"/>

        </HorizontalStackLayout>
        
    </StackLayout>
</ContentPage>
