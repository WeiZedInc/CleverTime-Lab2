<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CleverTime.MainPage"
             xmlns:viewmodel="clr-namespace:CleverTime"
             x:DataType="viewmodel:MainVM">

    <!-- row = vertical-->
    <Grid RowDefinitions="Auto, Auto"
          HorizontalOptions="Center"
          ColumnDefinitions="Auto"
          Padding="10"
          RowSpacing="10"
          ColumnSpacing="10"
          >

        <Button Grid.Column="1"
                x:Name="CreateTimerButton"
                Text="Add Timer"
                Clicked="OnCreateTimer_Clicked"
                HorizontalOptions="Start" />


        <CollectionView  Grid.Row="1" Grid.Column="1"
                        ItemsSource="{Binding AllTimers}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewmodel:TTimer">
                    <Frame>
                        <Grid>
                            <Label Text="{Binding Name}"/>
                            <Label Text="{Binding GroupName}"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
    </Grid>


</ContentPage>



